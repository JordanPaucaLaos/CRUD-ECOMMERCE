<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Jordan</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <section id="header">
        <a href="#"><img src="/imagenes/logo.png" class="logo" alt=""></a>

        <div>
            <ul id="navbar">
                <li><a href="/">Inicio</a></li>
                <li><a class="active" href="/tienda">Tienda</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/acerca">Acerca de Nosotros</a></li>
                <li><a href="/contacto">Contacto</a></li>
                <li id="lg-bag"><a href="#"><i class="fas fa-shopping-bag"></i></a></li>
                <a href="#" id="close"><i class="fas fa-times"></i></a>

            </ul>
        </div>

        <div id="mobile">
            <a href="#"><i class="fas fa-shopping-bag"></i></a>
            <i id="bar" class="fas fa fa-outdent"></i>
        </div>
    </section>

    <section id="prodetalles" class="section-p1">
        <div class="single-pro-image">
            <img src="/imagenes/productos/<%= producto.nombre_imagen %>" width="100%" id="mainimg" alt="">            
        </div>

        <div class="single-pro-detalles">
            <h6>Inicio/Zapatillas/<%= producto.marca.nombre_marca %>
            </h6>
            <h4>
                <%= producto.nombre_prod %>
            </h4>
            <h2>
                <%= producto.precio_prod %>
            </h2>

            <button class="button-editar" role="button"><a href="/tienda/edit/<%= producto.id %>">Editar</a></button>
            <!-- Trigger/Open The Modal -->
            <button class="button-borrar" role="button" id="myBtn">Borrar</button>



        </div>
    </section>

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <h4> Estas seguro que quieres eliminar este producto? : <%= producto.nombre_prod %>
            </h4>

            <form action="/tienda/delete/<%= producto.id %>?_method=delete" method="post" style="text-align: center;" autocomplete="off">

                <button class="button-borrar" type="submit" name="borrar">Eliminar Producto</button>
                <button class="button-regresar" name="listado"><a href="/tienda"></a>Listado de Productos</button>

            </form>
        </div>

    </div>



    <%- include('partials/newsletter.ejs') %>

        <%- include('partials/footer.ejs') %>

            <script>
                // Get the modal
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

            </script>

            <script src="/javascripts/script.js"></script>
</body>

</html>